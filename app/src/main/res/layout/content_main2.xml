<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main2"
        tools:context=".Main2Activity">

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <Button
            android:text="Licz kalorie"
            android:background="@drawable/login_button"

            android:textColor="#ffffff"
            android:layout_width="149dp"
            android:textSize="14dp"
            android:layout_height="35dp"
            android:id="@+id/button3"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="130dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Wprowadź produkt "
            android:textColor="#ffffff"

            android:background="@drawable/login_button"
            android:layout_width="171dp"
            android:textSize="14dp"
            android:layout_height="43dp"
            android:id="@+id/button4" android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="132dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Wpisz kalorie"
            android:layout_width="132dp"
            android:layout_height="22dp"
            android:background="@drawable/login_text"
            android:textColor="#A9A9A9"
            android:paddingLeft="10dp"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/button5" android:layout_marginEnd="50dp"/>
    <TextView
            android:text="Wyszukaj produkt"
            android:layout_width="125dp"
            android:textColor="#A9A9A9"
            android:background="@drawable/login_text"

            android:layout_height="21dp"
            android:paddingLeft="10dp"

            android:id="@+id/textView2"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button4" android:layout_marginEnd="60dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="bilans kalorii"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="18dp"
            android:textColor="#A9A9A9"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Spinner
            android:layout_width="177dp"
            android:layout_height="20dp"
            android:background="@drawable/login_text"
            android:id="@+id/spinner" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.439"
            android:layout_marginTop="82dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"/>
    <Button
            android:text="Wprowadź kalorie"
            android:textColor="#ffffff"

            android:background="@drawable/login_button"
            android:textSize="14dp"
            android:layout_width="174dp"
            android:layout_height="43dp"
            android:id="@+id/button5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/button4"
    />

    <Button
            android:text="Usuń ostatnią  dodaną kalorie"
            android:textColor="#ffffff"

            android:layout_width="168dp"
            android:textSize="14sp"
            android:background="@drawable/login_button"
            android:layout_height="43dp"
            android:id="@+id/button6"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/button5"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Dodane kalorie:"
            android:textColor="#A9A9A9"
            android:layout_width="139dp"
            android:layout_height="41dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="192dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button6" android:layout_marginEnd="47dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textInputLayout">

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>