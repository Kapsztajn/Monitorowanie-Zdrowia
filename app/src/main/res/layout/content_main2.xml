<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main2"
        tools:context=".Main2Activity">

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <Button
            android:text="Licz kalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.953"/>
    <Button
            android:text="Wprowadź produkt "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="128dp"
            android:id="@+id/button4" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Wpisz kalorie"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/textView"
            tools:layout_editor_absoluteY="223dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.077"/>
    <TextView
            android:text="Wyszukaj produkt"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/button4" android:layout_marginEnd="8dp"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.072"/>
    <TextView
            android:text="bilans kalorii"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            tools:layout_editor_absoluteY="472dp"/>
    <Spinner
            android:layout_width="177dp"
            android:layout_height="20dp"
            android:id="@+id/spinner" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.439" android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Wprowadź kalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/button4"
    />

    <Button
            android:text="Usuń ostatnią  kalorie"
            android:layout_width="158dp"
            android:textSize="14sp"

            android:layout_height="47dp"
            android:id="@+id/button6"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/button5"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Ilość wprowadzonych kalorii:"

            android:layout_width="142dp"
            android:layout_height="44dp"
            android:id="@+id/textView4"
            tools:layout_editor_absoluteY="296dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>